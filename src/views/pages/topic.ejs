<!DOCTYPE html>
<html lang="en">

  <!--  Head/Meta  Start-->
  <% var title = "Topic | " + data.name %>
  <% var image = "/static/img/fav.png" %>
  <!--Check if summary is null-->
  <% if (data.summary == null) { data.summary = "Topic summary has not been added yet." } %>
  <!-- Trancate summary to 160 characters and add ... -->
  <% var description = data.summary.length > 90 ? data.summary.substring(0, 90) + "..." : data.summary %>
  <%- include('../partials/meta', {
    title: title, image: image, description: description
  }); %>
  <!--  Head/Meta  End-->

  <body>
    <!--App Logon page Start-->
      <%- include('../partials/apps/topic', data); %>
    <!--App Logon page End-->
  </body>

</html>